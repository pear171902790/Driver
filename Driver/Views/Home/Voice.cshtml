@model List<Driver.Models.VoiceViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet"/>
    <style>
        * {
            margin: 0;padding: 0;
        }
         html,body {
             width: 100%;
             height: 100%;
         }
        .table-wrap {
            width: 70%;
            margin: 50px auto;
                 }
        th,td {
            text-align: center;
        }
    </style>
</head>
<body>
<div class="table-responsive table-wrap">
    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr><th>车牌号</th><th>语音</th><th>上传时间</th></tr>
        </thead>
        <tbody>
        @foreach (var voice in Model)
        {
            <tr>
                <td>
                    @voice.CarNumber
                </td>
                <td>
@*                    <video controls="controls" height="30" width="300">*@
@*                        <source src="~/Voice/@(voice.Source)" type="video/mp4"/>*@
@*                    </video>*@

                    <audio controls="controls">
                        <source src="/Voice/@(voice.Source)" type="audio/mpeg" />
                    </audio>
                </td>
                <td>
                    @voice.UploadTime
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>